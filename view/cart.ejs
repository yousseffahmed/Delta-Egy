    <style>
        body {
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }

        /* Center the header title */
        .header {
            background-color: black; /* Black background color */
            color: white; /* White text color */
            padding: 20px 0; /* Add padding */
            border-bottom: 5px solid #6d3ca4; /* Purple bottom border */
            display: flex; /* Use flexbox for layout */
            justify-content: space-between; /* Align items with space between */
            align-items: center; /* Align items vertically */
        }

        /* Logo styles */
        .logo img {
            width: 100px; /* Set logo width */
            height: auto; /* Maintain aspect ratio */
            display: inline-block; /* Make the image inline */
        }

        /* Delta.Egy text styles */
        .company-name {
            margin-left: 10px; /* Add margin between logo and text */
            display: inline-block; /* Make the text inline */
            font-size: 30px;
            font-family: Arial, sans-serif;
            position: relative; /* Set position relative */
            top: -40px; /* Move the text 10px upwards */
        }

        /* Additional elements styles */
        .additional-elements {
            display: flex; /* Use flexbox for layout */
            margin-right: 10px;
            font-size: 22px;
        }

        .additional-elements p {
            margin-left: 10px; /* Add margin between elements */
            color: white; /* White text color */
            cursor: pointer; /* Add cursor pointer */
        }

        .additional-elements p:hover {
            text-decoration: underline; /* Underline on hover */
        }

        .header a{
            text-decoration: none;
        }

        .page-body{
            padding: 100px 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .footer_section {
            width: 100%;
            background-color: #252525;
            height: auto;
            padding: 95px 0px;
            display: flex; /* Use flexbox */
            justify-content: space-around; /* Distribute items evenly */
            flex-wrap: wrap; /* Allow items to wrap */
        }

        .footer_section .container-footer {
            width: 90%;
            max-width: 1200px; /* Max width for the container */
            margin: auto; /* Center the container */
        }

        .footer_section .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-top: 20px;
        }

        .footer_section .col-lg-3,
        .footer_section .col-sm-6 {
            flex: 0 0 calc(25% - 20px); /* Each column occupies 25% of the space with some margin */
            margin-bottom: 20px;
        }

        @media (max-width: 992px) {
            .footer_section .col-lg-3,
            .footer_section .col-sm-6 {
                flex: 0 0 calc(50% - 20px); /* Each column occupies 50% of the space with some margin */
            }
        }

        @media (max-width: 576px) {
            .footer_section .col-lg-3,
            .footer_section .col-sm-6 {
                flex: 0 0 calc(100% - 20px); /* Each column occupies 100% of the space with some margin */
            }
        }

        .useful_text {
            font-size: 24px;
            color: #ffffff;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .footer_text {
            font-size: 14px;
            color: #ffffff;
            margin: 0px;
        }

        .footer_menu ul {
            list-style: none;
            padding: 0;
        }

        .footer_menu li {
            font-size: 14px;
            color: #ffffff;
        }

        .footer_menu li a {
            color: #ffffff;
            text-decoration: none;
        }

        .footer_menu li a:hover {
            color: #6d3ca4;
        }

        .footer_section .location_text ul li::marker {
            color: #ffffff; /* Set the color of the bullet point to white */
        }

        .footer_section .location_text ul li a {
            color: #ffffff;
            text-decoration: none; /* Remove underline from links */
        }

        .footer_section .location_text ul li a:hover {
            color: #6d3ca4;
        }

        .copyright_section {
            width: 100%;
            float: left;
            background-color: #ffffff;
            height: auto;
        }

        .copyright_text {
            width: 100%;
            float: left;
            font-size: 16px;
            color: #252525;
            text-align: center;
            margin-left: 0px;
        }

        .copyright_text a {
            color: #252525;
        }

        /* Shopping cart styles */
        .shopping-cart {
            display: flex;
            align-items: center;
            margin-right: 20px; /* Adjust margin for spacing */
        }

        .cart-icon {
            font-size: 24px; /* Set icon size */
            color: white; /* White color for icon */
            cursor: pointer; /* Add cursor pointer */
            margin-top: 20px;
        }

        .cart-count {
            font-size: 18px; /* Set font size */
            color: white; /* White color for text */
            margin-left: 25px;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f7f7f7;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .cart-container {
            max-width: 800px;
            margin: 100px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .item {
            display: flex;
            justify-content: space-between; /* Align item details and remove button */
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 20px;
        }

        .item img {
            max-width: 100px;
            margin-right: 20px;
        }

        .item-details {
            display: flex; /* Use flexbox for layout */
            align-items: center; /* Align items vertically */
        }

        .item-details p {
            margin: 30px;
            color: #666;
            margin-right: 20px; /* Add spacing between elements */
            font-size: large;
        }


        .remove-container {
            margin-left: auto; /* Push remove button to the right */
        }

        .cart-summary {
            text-align: center;
            margin-top: 20px;
        }

        .empty-cart {
            text-align: center;
            color: #666;
        }
        
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <!-- Logo and company name -->
        <div class="logo">
            <img src="../images/logo.png">
            <div class="company-name">Delta.Egy</div>
        </div>
        <!-- Additional elements -->
        <div class="additional-elements">
            <a href="/"><p>Home</p></a>
            <a href="/"><p>About</p></a>
            <a href="/"><p>Contact Us</p></a>
            <!-- Shopping cart -->
            <div class="shopping-cart">
                <a href="/cart.html">
                    <div class="cart-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="cart-count" id="cart-count">0</div>
                </a>
            </div>
        </div>
    </div> 
    <div class="cart-container">
        <% if(items && items.length > 0) { %>
            <% let subtotal = 0; %>
            <% items.forEach(item => { %>
                <div class="item">
                    <img src="/uploads/<%= item.image.filename %>" alt="Uploaded Image">
                    <div class="item-details">
                        <p class="item-name" style="font-weight: bold;"><%= item.name %></p>
                        <p>Quantity: <%= item.quantity %></p>
                        <p>Price: <%= item.price %></p>
                        <div class="subtotal" style="display: none;">Subtotal: <%= item.quantity * item.price %></div>
                    </div>
                    <div class="remove-container">
                        <button class="remove-btn" data-item-id="<%= item.id %>" style="background-color: #ff0101; color: white; border: none; border-radius: 5px; padding: 10px 10px; cursor: pointer; font-size: 16px;">Remove</button>
                    </div>
                </div>
                <% subtotal += item.quantity * item.price; %>
            <% }); %>
            <div class="cart-summary">
                <p>Total: <%= subtotal %></p>
                <input type="hidden" id="subtotal" value="<%= subtotal %>">
                <button id="checkout" style="background-color: #560bad; color: white; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer; font-size: 16px;">Proceed To Checkout</button>
            </div>
        <% } else { %>
            <p class="empty-cart">No items in the cart.</p>
        <% } %>
    </div>
    <div class="footer_section layout_padding">
        <div class="container-footer">
           <div class="row">
              <div class="col-lg-3 col-sm-6">
                 <h3 class="useful_text">About</h3>
